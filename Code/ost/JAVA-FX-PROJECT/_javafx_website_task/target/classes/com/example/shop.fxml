<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #FFFFFF;">
    <stylesheets>
        <URL value="styles.css" />
    </stylesheets>
    <children>
        <VBox spacing="20" layoutX="50" layoutY="50">
            <Label text="Bookshop - Fantasy Brigade" styleClass="heading" />
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <children>
                    <!-- Book Card 1 -->
                    <VBox spacing="5" styleClass="book-card">
                        <Label text="The Lord of the Rings - J.R.R. Tolkien" />
                        <Label text="Add to cart" styleClass="add-to-cart" />
                    </VBox>
                    <!-- Repeat for other books -->
                    <VBox spacing="5" styleClass="book-card">
                        <Label text="The Wheel of Time - Robert Jordan" />
                        <Label text="Add to cart" styleClass="add-to-cart" />
                    </VBox>
                </children>
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
